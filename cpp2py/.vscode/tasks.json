{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: clang++ 编译全部",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-g",
                
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Talk.cpp",
                "${workspaceFolder}/lib.cpp",
                "-o",
                "${workspaceFolder}/out/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译所有 cpp"
        }
    ],
    "version": "2.0.0"
}